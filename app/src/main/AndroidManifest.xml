<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.liveliness_diary">

    //인터넷 허용
    <uses-permission android:name="android.permission.INTERNET" />

    //파일 읽기, 쓰기 권한 추가
    //카메라로 촬영 후 메모리에 저장
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    //카메라, 갤러리 접근
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>


    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/diarylogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Liveliness_Diary"
        tools:targetApi="31">

        <activity
            android:name=".Join">

        </activity>

        <activity
            android:name=".Login"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".Mood_color">
        </activity>

        <activity
            android:name=".Mood_grape">
        </activity>

        <activity
            android:name=".Stats">
        </activity>

        <activity
            android:name=".WriteDiary">
        </activity>

        <activity
            android:name=".Diary">
        </activity>

        <activity
            android:name=".DiaryClick">
        </activity>

        <activity
            android:name=".DiaryDelete">
        </activity>

        <activity android:name=".Intro">

        </activity>

        <activity
            android:name=".Mood_color_change">
        </activity>

        <activity
            android:name=".Mood_grape_change">
        </activity>

        <activity
            android:name=".MainActivity">

        </activity>

        //사진 고화질
        <provider
            android:authorities="com.example.liveliness_diary"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
    </application>
</manifest>
